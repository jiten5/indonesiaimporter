# Production Environment Variables
# Copy this file to .env.production.local and fill in actual values
# NEVER commit .env.production.local to version control!

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_APP_NAME=Global Trade Intelligence Platform

# API Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
API_SECRET_KEY=your_production_api_secret_key_here

# ElasticSearch (Production)
ELASTICSEARCH_URL=https://your-elasticsearch-instance.com:9200
ELASTICSEARCH_USERNAME=your_username
ELASTICSEARCH_PASSWORD=your_password

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SEARCH=true

# Rate Limiting (if applicable)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Email Service (if applicable)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_SERVICE_API_KEY=your_email_service_api_key

# Database (if applicable)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Session & Auth (if applicable)
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters_long

# Vercel-specific (automatically set by Vercel)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=auto-generated-by-vercel.vercel.app
